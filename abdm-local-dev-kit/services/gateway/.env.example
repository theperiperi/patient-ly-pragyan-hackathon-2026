# Service Configuration
SERVICE_NAME=ABDM Gateway
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Server Configuration
PORT=8090
HOST=0.0.0.0
DEBUG=false

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=abdm_gateway

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Service URLs
HIP_SERVICE_URL=http://hip:8091
HIU_SERVICE_URL=http://hiu:8092
CONSENT_MANAGER_URL=http://consent-manager:8093

# Logging Configuration
LOG_LEVEL=INFO
